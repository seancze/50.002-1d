module test_case_enum #(
    NUM_CASES = 15 : NUM_CASES > 0,
    DIGITS = 4 : DIGITS > 0,
    DIV = 27 : DIV >= 0
  )(
    input clk,                // clock
    input rst,                // reset
    output sel [DIGITS]       // Num case to select
  ) {
 
  .clk(clk), .rst(rst) {
    counter ctr (#DIV(DIV), #SIZE(DIGITS), #TOP(NUM_CASES)); 
  }
 
  always {
    sel = ctr.value;                  // output the active digit
  }
}